pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('GIT-Checkout'){
            steps{
                script{
                    sh('curl https://github.com/RhitamB-Eximietas/TestingFramework.git')
                }
            }
        }
        stage('Test') {
            steps{
                script{
                    sh '''
                    echo 'Checking Pre-requisites'
                    python3 --version
                    newman --version
                    pip3 install robotframework --break-system-packages
                    pip3 install robotframework-jsonlibrary --break-system-packages
                    robot TestingFW.robot  
                    '''
                }
            }
        }
    }
}
